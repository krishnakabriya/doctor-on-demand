<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/appointmentlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/dname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dr. Nishant Goyal"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/pname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/dname"
            android:layout_marginTop="8dp"
            android:text="Janki Jadav"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/haddress"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/pname"
            android:layout_marginTop="8dp"
            android:text="Shalby Multi-Specialty Hospital, Nr. Navyug College, Rander Rd, Adajan, Surat, Gujarat 395009"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/haddress"
            android:layout_marginTop="8dp"
            android:text="10/02/23"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/haddress"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/date"
            android:text="8:12"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btnRV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_toRightOf="@id/appointmentlist"
        android:background="@color/white">

        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="delete"
            android:textSize="15dp"/>

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="update"
            android:layout_below="@id/btnDelete"
            android:textSize="15dp"/>


</RelativeLayout>
    </RelativeLayout>